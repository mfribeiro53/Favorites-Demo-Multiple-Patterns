{
  "name": "favorites-store-demo",
  "version": "1.0.0",
  "description": "JavaScript favorites store implementation using closure pattern with observer pattern for state management",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
  "start": "node server/api-server.js",
  "dev": "npx http-server . -p 3000 -o -c-1",
  "test": "mocha --require test/setup.global.js \"test/**/*.test.js\"",
  "test:unit": "mocha --require test/setup.global.js \"test/**/*.test.js\" --exclude \"test/integration/**\"",
  "test:integration": "mocha --require test/setup.global.js \"test/integration/**/*.test.js\"",
    "serve": "python3 -m http.server 8080",
    "title-server": "node server/title-proxy.js",
  "dev-with-titles": "npm run serve & npm run title-server",
    "api-server": "node server/api-server.js",
  "servers": "npm run api-server & npm run title-server",
  "dev-full": "npm run api-server & npm run title-server & npm run dev",
  "install-deps": "npm install express mssql cors ejs"
  },
  "keywords": [
    "javascript",
    "closure",
    "observer-pattern",
    "state-management",
    "favorites"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
  "http-server": "^14.1.1",
  "chai": "^5.1.1",
  "mocha": "^10.7.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
  "mssql": "^11.0.1",
  "ejs": "^3.1.10"
  }
}
